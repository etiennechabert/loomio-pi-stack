# Loomio Development Configuration
# For local development only - NOT for production use

# =============================================================================
# ENVIRONMENT
# =============================================================================
RAILS_ENV=development
RACK_ENV=development

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================
CANONICAL_HOST=localhost:3000
SUPPORT_EMAIL=support@localhost
HELPER_BOT_EMAIL=noreply@localhost

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_DB=loomio_development
POSTGRES_USER=loomio
POSTGRES_PASSWORD=devpassword

# =============================================================================
# SECRET KEYS (Development - not secure)
# =============================================================================
SECRET_KEY_BASE=dev_secret_key_base_not_for_production_use_dev_secret_key_base_not_for_production_use
LOOMIO_HMAC_KEY=dev_hmac_key_not_for_production
DEVISE_SECRET=dev_devise_secret_not_for_production

# =============================================================================
# EMAIL (Disabled in development)
# =============================================================================
# SMTP not required for development - emails shown in logs
SMTP_DOMAIN=localhost
REPLY_HOSTNAME=localhost
FROM_EMAIL=noreply@localhost

# =============================================================================
# PORTS
# =============================================================================
LOOMIO_PORT=3000
CHANNELS_PORT=5000
HOCUSPOCUS_PORT=4000
ADMINER_PORT=8081
NETDATA_PORT=19999

# =============================================================================
# WEBSOCKET URLS (HTTP for local development)
# =============================================================================
CHANNELS_URL=ws://localhost:5000
HOCUSPOCUS_URL=ws://localhost:4000

# =============================================================================
# SSL (Disabled for local development)
# =============================================================================
# Leave FORCE_SSL unset for HTTP development
# FORCE_SSL=

# =============================================================================
# BACKUP
# =============================================================================
BACKUP_ENCRYPTION_KEY=dev_backup_key_not_secure
BACKUP_SCHEDULE="0 */6 * * *"
BACKUP_RETENTION_DAYS=7
GDRIVE_ENABLED=false

# =============================================================================
# RAM MODE (Optional - reduces SD card writes)
# =============================================================================
# Store database and Redis entirely in RAM for better performance
# and reduced SD card wear. Data is lost on restart but restored
# from ./data/db_backup/ automatically on startup.
#
# Requirements:
#   - At least 8GB RAM recommended
#   - Hourly backups (set BACKUP_SCHEDULE="0 * * * *")
#   - Latest backup must exist in ./data/db_backup/
#
# To enable: uncomment the line below
# RAM_MODE=true

# =============================================================================
# FILE UPLOAD LIMITS
# =============================================================================
MAX_ATTACHMENT_SIZE_MB=42

# =============================================================================
# PERFORMANCE (Lower for development)
# =============================================================================
PUMA_WORKERS=1
RAILS_MAX_THREADS=3
SIDEKIQ_CONCURRENCY=3
MAX_THREADS=2

# =============================================================================
# MONITORING ALERTS (Optional)
# =============================================================================
# Email address to receive system alerts (RAM, CPU warnings)
# Leave empty to disable email alerts
# ALERT_EMAIL=admin@example.com

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================
RAILS_LOG_LEVEL=debug
DEBUG=true
